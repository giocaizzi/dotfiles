{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "#7eb8da",
          "template": "\u250f[<#ffffff>\ueb99</> {{ .UserName }} from <#ffffff>\uf108</> {{ .HostName }}]"
        },
        {
          "type": "root",
          "style": "diamond",
          "template": "\uf0e7",
          "properties": {
            "root_icon": "\uf292"
          }
        },
        {
          "type": "aws",
          "style": "plain",
          "foreground": "#ffa5d8",
          "template": "[{{ .Profile }}{{if .Region}}@{{ .Region }}{{ end }}]"
        },
        {
          "type": "kubectl",
          "style": "plain",
          "foreground": "#ffa5d8",
          "template": "[{{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}}]"
        },
        {
          "type": "root",
          "style": "plain",
          "foreground": "#ffa5d8",
          "template": "[\uf0e7]"
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#F05032",
          "template": "[<#ffffff>{{ .UpstreamIcon }}</>{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} <#ffffff>\uf044</> {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} <#ffffff>\uf046</> {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} <#ffffff>\ueb4b</> {{ .StashCount }}{{ end }}]",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        },
        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": "[\ue235 {{ if .Venv }}{{ .Venv }} {{ .Full }}{{ end }}]",
          "type": "python"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "sysinfo",
          "style": "diamond",
          "foreground": "#ffffff",
          "foreground_templates": [
            "{{ if (gt (subf 1 (divf (.PhysicalFreeMemory|float64) (.PhysicalTotalMemory|float64))) 0.2) }}#fff34e{{else}}#ffa5d8{{end}}"
          ],
          "template": "[<#ffffff>\ue266</> RAM: {{ (div ((sub .PhysicalTotalMemory .PhysicalFreeMemory)|float64) 1073741824.0) }}/{{ (div .PhysicalTotalMemory 1073741824.0) }}GB]"
        },
        {
          "type": "battery",
          "style": "diamond",
          "foreground": "#ffffff",
          "foreground_templates": [
            "{{if eq \"Charging\" .State.String}}#b8e994{{end}}",
            "{{if eq \"Discharging\" .State.String}}#fff34e{{end}}",
            "{{if eq \"Full\" .State.String}}#33DD2D{{end}}"
          ],
          "properties": {
            "charged_icon": "\uf240 ",
            "charging_icon": "\uf1e6 ",
            "discharging_icon": "\ue234 "
          },
          "template": "{{ if not .Error }}[{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }}\uf295]"
        },
        {
          "type": "time",
          "style": "diamond",
          "foreground": "#7eb8da",
          "template": "[<#ffffff>\uf073</> {{ .CurrentDate | date .Format }}]",
          "properties": {
            "time_format": "Monday at 3:04:05 PM"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "#7eb8da",
          "template": "\u2516[<#98bfad>{{ .Path }}</>]",
          "properties": {
            "style": "full"
          }
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "foreground": "#be9ddf",
          "template": "[<#ffffff>\uf252</> {{ .FormattedMs }}s]",
          "properties": {
            "style": "dallas",
            "threshold": 0
          }
        },
        {
          "type": "status",
          "style": "powerline",
          "foreground": "#ffa5d8",
          "template": "[<#ffffff>\uea6c</> Error, check your command]"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#7eb8da",
          "template": "\u2514\u2500Î”"
        }
      ],
      "newline": true
    }
  ]
}
