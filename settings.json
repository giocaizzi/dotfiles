{
    // --- JSON ---
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    // --- YAML ---
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    // --- Azure ---
    "@azure.argTenant": "efd43e52-58c9-417a-9059-96780f094db0",
    // show python venv warning
    "azureFunctions.showPythonVenvWarning": true,
    // group azure resources by resource group
    "azureResourceGroups.groupBy": "resourceGroup",
    // --- Chat ---
    "chat.editing.alwaysSaveWithGeneratedChanges": true,
    // --- Editor ---
    // python docstring color
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "string.quoted.docstring.multi.python",
                "settings": {
                    "foreground": "#acacac"
                }
            }
        ]
    },
    // --- Editor ---
    // word wrap
    "editor.wordWrap": "on",
    // --- Explorer ---
    "explorer.confirmDelete": false,
    // --- Git ---
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.replaceTagsWhenPull": true,
    // --- GitHub ---
    "github.copilot.enable": {
        "*": true,
        "markdown": true,
        "plaintext": true,
        "scminput": false
    },
    "githubPullRequests.createOnPublishBranch": "never",
    "githubPullRequests.pullBranch": "never",
    // --- Notebooks ---
    "notebook.lineNumbers": "on",
    // --- Terminal ---
    // ohmyposh https://ohmyposh.dev/docs/installation/fonts
    "terminal.integrated.fontFamily": "MesloLGM Nerd Font",
    "terminal.integrated.inheritEnv": true,
    // --- Jupyter ---
    "jupyter.widgetScriptSources": [
        "jsdelivr.com",
        "unpkg.com"
    ],
    "redhat.telemetry.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "docker.extension.dockerEngineAvailabilityPrompt": false
}